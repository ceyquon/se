        }
        
        /* Mobile-optimized floating elements */
        .hearts-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }
        
        .heart {
            position: absolute;
            color: #ff3366;
            font-size: 22px;
            opacity: 0.7;
            animation: floatHeart 10s linear infinite;
        }
        
        @keyframes floatHeart {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 0.7;
            }
            90% {
                opacity: 0.7;
            }
            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }
        
        /* Mobile-optimized balloons */
        .balloons-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 2;
        }
        
        .balloon {
            position: absolute;
            width: 50px;
            height: 60px;
            border-radius: 50%;
            bottom: -80px;
            animation: floatBalloon 25s linear infinite;
            box-shadow: inset -5px -5px 8px rgba(0, 0, 0, 0.1);
        }
        
        .balloon:before {
            content: '';
            position: absolute;
            width: 1.5px;
            height: 60px;
            background-color: rgba(0, 0, 0, 0.15);
            bottom: -60px;
            left: 50%;
            transform: translateX(-50%);
        }
        
        .balloon:nth-child(1) { background: #ff3366; left: 10%; animation-delay: 0s; }
        .balloon:nth-child(2) { background: #6a11cb; left: 25%; animation-delay: 3s; }
        .balloon:nth-child(3) { background: #00b4d8; left: 40%; animation-delay: 6s; }
        .balloon:nth-child(4) { background: #ff9e00; left: 55%; animation-delay: 9s; }
        .balloon:nth-child(5) { background: #38b000; left: 70%; animation-delay: 12s; }
        .balloon:nth-child(6) { background: #9d4edd; left: 85%; animation-delay: 15s; }
        
        @keyframes floatBalloon {
            0% {
                transform: translateY(0) rotate(0deg);
                bottom: -80px;
                opacity: 0.9;
            }
            100% {
                transform: translateY(-120vh) rotate(0deg);
                bottom: 120vh;
                opacity: 0;
            }
        }
        
        /* Roses Container */
        .roses-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 40;
        }
        
        .rose {
            position: absolute;
            font-size: 40px;
            opacity: 0;
            z-index: 41;
            filter: drop-shadow(2px 2px 3px rgba(0, 0, 0, 0.3));
        }
        
        .rose:nth-child(odd) {
            color: #ff3366; /* Red roses */
        }
        
        .rose:nth-child(even) {
            color: #ff6b9d; /* Pink roses */
        }
        
        /* Footer */
        .footer {
            margin-top: 25px;
            color: white;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
            font-size: 1rem;
            text-align: center;
            z-index: 20;
            padding: 0 15px;
        }
        
        /* Mobile-specific adjustments */
        @media (max-height: 700px) {
            .container {
                padding: 20px 15px;
            }
            
            h1 {
                font-size: 2.2rem;
                margin-bottom: 8px;
            }
            
            .subtitle {
                font-size: 1.1rem;
                margin-bottom: 20px;
            }
            
            .buttons-container {
                min-height: 250px;
                margin: 25px 0;
            }
            
            .valentine-button {
                padding: 20px 35px;
                font-size: 1.6rem;
                min-width: 180px;
                min-height: 70px;
            }
        }
        
        @media (max-width: 380px) {
            h1 {
                font-size: 2rem;
            }
            
            .valentine-button {
                padding: 18px 30px;
                font-size: 1.5rem;
                min-width: 170px;
                min-height: 65px;
            }
            
            .message {
                font-size: 1.3rem;
                padding: 15px;
            }
            
            .message h2 {
                font-size: 1.8rem;
            }
        }
        
        /* Landscape mode optimization */
        @media (orientation: landscape) and (max-height: 500px) {
            .container {
                padding: 15px;
                max-width: 90%;
            }
            
            h1 {
                font-size: 1.8rem;
                margin-bottom: 5px;
            }
            
            .subtitle {
                font-size: 1rem;
                margin-bottom: 15px;
            }
            
            .buttons-container {
                min-height: 200px;
                margin: 15px 0;
                flex-direction: row;
                justify-content: space-around;
            }
            
            .valentine-button {
                padding: 15px 25px;
                font-size: 1.4rem;
                min-width: 150px;
                min-height: 60px;
                margin: 0 10px;
            }
            
            #noButton {
                position: relative;
            }
            
            .instructions {
                margin-top: 10px;
                font-size: 0.9rem;
                padding: 8px 10px;
            }
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.95); }
            to { opacity: 1; transform: scale(1); }
        }
        
        @keyframes wiggle {
            0%, 100% { transform: rotate(-2deg); }
            50% { transform: rotate(2deg); }
        }
        
        .wiggle {
            animation: wiggle 0.4s ease-in-out;
        }
        
        @keyframes explodeRose {
            0% {
                opacity: 0;
                transform: translate(0, 0) scale(0.1) rotate(0deg);
            }
            10% {
                opacity: 1;
            }
            100% {
                opacity: 1;
                transform: translate(var(--tx), var(--ty)) scale(1) rotate(var(--rot));
            }
        }
        
        @keyframes fadeOutRose {
            0% {
                opacity: 1;
            }
            100% {
                opacity: 0;
            }
        }
        
        /* Success animation for YES button */
        @keyframes successPulse {
            0%, 100% { transform: rotate(-2deg) scale(1); }
            50% { transform: rotate(-2deg) scale(1.1); }
        }
        
        .success {
            animation: successPulse 0.5s ease-in-out 3;
            background: linear-gradient(145deg, #4CAF50, #8BC34A) !important;
            box-shadow: 0 0 30px rgba(76, 175, 80, 0.5) !important;
        }
        
        /* Prevent text selection */
        .valentine-button, h1, .subtitle {
            -webkit-user-select: none;
            user-select: none;
        }
