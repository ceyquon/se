<body>
    <!-- Balloons -->
    <div class="balloons-container">
        <div class="balloon"></div>
        <div class="balloon"></div>
        <div class="balloon"></div>
        <div class="balloon"></div>
        <div class="balloon"></div>
        <div class="balloon"></div>
    </div>
    
    <!-- Floating Hearts -->
    <div class="hearts-container" id="heartsContainer"></div>
    
    <!-- Roses Container -->
    <div class="roses-container" id="rosesContainer"></div>
    
    <div class="container">
        <h1><i class="fas fa-heart"></i> Will You Be My Valentine? <i class="fas fa-heart"></i></h1>
        <p class="subtitle">The "NO" button is shy... try to catch it!</p>
        
        <div class="buttons-container" id="buttonsContainer">
            <button class="valentine-button" id="yesButton">
                <i class="fas fa-heart"></i> YES! 
            </button>
            <button class="valentine-button" id="noButton">
                <i class="fas fa-times"></i> NO WAY
            </button>
        </div>
        
        <div class="instructions">
            <p><i class="fas fa-hand-pointer"></i> Click YES for a rose surprise!</p>
            <p style="font-size: 0.9rem; margin-top: 5px; color: #ff3366;">NO button runs away when you try to click it</p>
        </div>
        
        <div class="message" id="message">
            <h2><i class="fas fa-heartbeat"></i> Thank You! <i class="fas fa-heartbeat"></i></h2>
            <p>You've made me the happiest person! Here are two dozen roses just for you, my Valentine! ðŸ’–ðŸŒ¹</p>
            <p style="margin-top: 15px; font-weight: bold; color: #ff3366;">Happy Valentine's Day, my love!</p>
        </div>
        
        <div class="footer">
            <p>Made with <i class="fas fa-heart" style="color:#ff3366"></i> for my special Valentine</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yesButton = document.getElementById('yesButton');
            const noButton = document.getElementById('noButton');
            const message = document.getElementById('message');
            const heartsContainer = document.getElementById('heartsContainer');
            const rosesContainer = document.getElementById('rosesContainer');
            const buttonsContainer = document.getElementById('buttonsContainer');
            
            let noButtonClicked = false;
            let yesButtonClicked = false;
            let escapeCount = 0;
            let isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
            const MOVE_COOLDOWN = 300;
            let lastMoveTime = 0;
            
            // Create mobile-optimized floating hearts
            function createHearts() {
                const heartCount = isMobile ? 12 : 20;
                
                for (let i = 0; i < heartCount; i++) {
                    const heart = document.createElement('div');
                    heart.classList.add('heart');
                    heart.innerHTML = 'â¤';
                    heart.style.left = Math.random() * 100 + 'vw';
                    heart.style.animationDuration = (Math.random() * 8 + 6) + 's';
                    heart.style.fontSize = (Math.random() * 15 + 18) + 'px';
                    heart.style.opacity = Math.random() * 0.5 + 0.3;
                    heart.style.animationDelay = Math.random() * 3 + 's';
                    heartsContainer.appendChild(heart);
                }
            }
            
            createHearts();
            
            // Create and animate 2 dozen roses (24 roses)
            function createRoses() {
                // Clear any existing roses
                rosesContainer.innerHTML = '';
                
                // Create 24 roses
                for (let i = 0; i < 24; i++) {
                    const rose = document.createElement('div');
                    rose.classList.add('rose');
                    rose.innerHTML = 'ðŸŒ¹';
                    
                    // Start from the center (where YES button is)
                    const centerX = window.innerWidth / 2;
                    const centerY = window.innerHeight / 2;
                    
                    // Calculate random direction and distance for explosion
                    const angle = Math.random() * Math.PI * 2;
                    const distance = 100 + Math.random() * 300;
                    const tx = Math.cos(angle) * distance;
                    const ty = Math.sin(angle) * distance;
                    const rotation = Math.random() * 360;
                    
                    // Set initial position (center)
                    rose.style.left = `${centerX}px`;
                    rose.style.top = `${centerY}px`;
                    
                    // Set CSS variables for animation
                    rose.style.setProperty('--tx', `${tx}px`);
                    rose.style.setProperty('--ty', `${ty}px`);
                    rose.style.setProperty('--rot', `${rotation}deg`);
                    
                    // Random size for variety
                    const size = 30 + Math.random() * 30;
                    rose.style.fontSize = `${size}px`;
                    
                    rosesContainer.appendChild(rose);
                    
                    // Animate the rose
                    setTimeout(() => {
                        rose.style.animation = `explodeRose 1s ease-out forwards, fadeOutRose 2s ease-in 3s forwards`;
                    }, i * 50); // Stagger the roses
                }
                
                // After all roses have exploded, keep them for a bit then remove
                setTimeout(() => {
                    rosesContainer.innerHTML = '';
                }, 6000);
            }
            
            // Function to move the NO button away
            function moveNoButton(event = null) {
                if (Date.now() - lastMoveTime < MOVE_COOLDOWN) return;
                lastMoveTime = Date.now();
                
                if (noButtonClicked) return;
                
                const containerRect = buttonsContainer.getBoundingClientRect();
                const buttonRect = noButton.getBoundingClientRect();
                
                // Calculate max positions
                const maxX = containerRect.width - buttonRect.width;
                const maxY = containerRect.height - buttonRect.height;
                
                let randomX, randomY;
                
                // If we have event coordinates (touch/mouse), move away from that point
                if (event) {
                    let clientX, clientY;
                    
                    if (event.type.includes('touch')) {
                        clientX = event.touches[0].clientX;
                        clientY = event.touches[0].clientY;
                    } else {
                        clientX = event.clientX;
                        clientY = event.clientY;
                    }
                    
                    // Convert to container coordinates
                    const eventContainerX = clientX - containerRect.left;
                    const eventContainerY = clientY - containerRect.top;
                    
                    // Move to opposite side
                    randomX = eventContainerX < maxX/2 ? maxX * 0.8 : maxX * 0.2;
                    randomY = eventContainerY < maxY/2 ? maxY * 0.8 : maxY * 0.2;
                } else {
                    // Random position
                    randomX = Math.random() * maxX;
                    randomY = Math.random() * maxY;
                }
                
                // Apply new position
                noButton.style.left = `${randomX}px`;
                noButton.style.top = `${randomY}px`;
                
                // Add wiggle animation
                noButton.classList.add('wiggle');
                setTimeout(() => {
                    noButton.classList.remove('wiggle');
                }, 400);
                
                // Change NO button text based on escape count
                escapeCount++;
                if (escapeCount === 3) {
                    noButton.innerHTML = '<i class="fas fa-running"></i> CAN\'T CATCH ME';
                } else if (escapeCount === 6) {
                    noButton.innerHTML = '<i class="fas fa-bolt"></i> TOO FAST!';
                } else if (escapeCount === 10) {
                    noButton.innerHTML = '<i class="fas fa-rocket"></i> IMPOSSIBLE!';
                }
            }
            
            // Function to handle YES button click
            function handleYesClick() {
                if (yesButtonClicked) return;
                yesButtonClicked = true;
                
                // Change YES button appearance
                yesButton.classList.add('success');
                yesButton.innerHTML = '<i class="fas fa-heart"></i> THANK YOU! <i class="fas fa-heart"></i>';
                
                // Disable NO button
                noButtonClicked = true;
                noButton.style.opacity = '0.5';
                noButton.style.pointerEvents = 'none';
                
                // Show message
                setTimeout(() => {
                    message.classList.add('show');
                    // Scroll message into view on mobile
                    message.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }, 500);
                
                // Create rose explosion
                setTimeout(() => {
                    createRoses();
                }, 800);
                
                // Create additional celebration effects
                setTimeout(() => {
                    // Create extra hearts
                    for (let i = 0; i < 15; i++) {
                        setTimeout(() => {
                            const heart = document.createElement('div');
                            heart.classList.add('heart');
                            heart.innerHTML = 'â¤';
                            heart.style.left = Math.random() * 100 + 'vw';
                            heart.style.animationDuration = '3s';
                            heart.style.fontSize = '25px';
                            heart.style.opacity = '0.8';
                            heartsContainer.appendChild(heart);
                            
                            // Remove heart after animation
                            setTimeout(() => {
                                heart.remove();
                            }, 3000);
                        }, i * 100);
                    }
                }, 1500);
            }
            
            // Set initial NO button position
            function setInitialNoButtonPosition() {
                const containerRect = buttonsContainer.getBoundingClientRect();
                const buttonRect = noButton.getBoundingClientRect();
                
                // Position NO button randomly initially
                const maxX = containerRect.width - buttonRect.width;
                const maxY = containerRect.height - buttonRect.height;
                
                const randomX = Math.random() * maxX;
                const randomY = Math.random() * maxY;
                
                noButton.style.left = `${randomX}px`;
                noButton.style.top = `${randomY}px`;
            }
            
            // Set NO button to absolute positioning
            noButton.style.position = 'absolute';
            setInitialNoButtonPosition();
            
            // Setup event handlers for NO button (mobile)
            if (isMobile) {
                // Touch events for mobile
                noButton.addEventListener('touchstart', function(e) {
                    e.preventDefault();
                    moveNoButton(e);
                }, {passive: false});
                
                noButton.addEventListener('touchmove', function(e) {
                    e.preventDefault();
                }, {passive: false});
            } else {
                // Mouse events for desktop
                noButton.addEventListener('mouseenter', function(e) {
                    if (!noButtonClicked) {
                        moveNoButton(e);
                    }
                });
                
                noButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    if (!noButtonClicked) {
                        moveNoButton(e);
                    }
                });
            }
            
            // Setup event handler for YES button
            yesButton.addEventListener('click', handleYesClick);
            
            // For mobile, also allow touch on YES button
            if (isMobile) {
                yesButton.addEventListener('touchstart', function(e) {
                    e.preventDefault();
                    handleYesClick();
                }, {passive: false});
            }
            
            // Make the entire container trigger NO button movement when touched/clicked
            buttonsContainer.addEventListener('click', function(e) {
                if (e.target !== yesButton && e.target !== noButton && !noButtonClicked) {
                    moveNoButton(e);
                }
            });
            
            if (isMobile) {
                buttonsContainer.addEventListener('touchstart', function(e) {
                    if (e.target !== yesButton && e.target !== noButton && !noButtonClicked) {
                        e.preventDefault();
                        moveNoButton(e);
                    }
                }, {passive: false});
            }
            
            // Auto-accept after 30 seconds if user hasn't clicked YES
            setTimeout(() => {
                if (!yesButtonClicked) {
                    handleYesClick();
                    // Update message for auto-accept
                    message.innerHTML = `
                        <h2><i class="fas fa-heartbeat"></i> I'll Take That as a YES! <i class="fas fa-heartbeat"></i></h2>
                        <p>Since you couldn't resist my charm, here are two dozen roses for you, my Valentine! ðŸ’–ðŸŒ¹</p>
                        <p style="margin-top: 15px; font-weight: bold; color: #ff3366;">Happy Valentine's Day!</p>
                    `;
                }
            }, 30000);
            
            // Handle orientation changes
            window.addEventListener('orientationchange', function() {
                setTimeout(() => {
                    if (!noButtonClicked) {
                        setInitialNoButtonPosition();
                    }
                }, 300);
            });
            
            // Prevent context menu on buttons
            yesButton.addEventListener('contextmenu', e => e.preventDefault());
            noButton.addEventListener('contextmenu', e => e.preventDefault());
        });
    </script>
</body>
</html>
